<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="630dp"
    android:layout_height="100dp"
    android:layout_marginBottom="13dp"
    android:clickable="true"
    tools:context="com.example.obberertest.timesloth_sm10.ModuleFindRoomDetailFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:alpha="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_bar_status"
            android:layout_width="15dp"
            android:layout_height="80dp"
            android:background="@color/Red"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/text_room_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:includeFontPadding="false"
            android:text="1A"
            android:textColor="@color/White"
            android:textSize="85sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:text="@string/busy"
                android:textSize="40sp"
                android:textColor="@color/White"/>
            <TextView
                android:id="@+id/text_status_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/next_available"
                android:textColor="#F5D800"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
