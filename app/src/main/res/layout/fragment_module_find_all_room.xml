<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:clickable="true"
    tools:context="com.example.obberertest.timesloth_sm10.ModuleFindAllRoomFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            style="@style/RoomImage"
            android:id="@+id/image_room"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:src="@drawable/jaspal_logo"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/text_time"
                android:layout_width="440dp"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:paddingEnd="30dp"
                android:text="09 : 10"
                android:textSize="40dp"
                android:textColor="@color/White"/>
            <TextView
                android:id="@+id/text_date"
                android:layout_width="440dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="30dp"
                android:text="28 NOV 2016"
                android:textSize="40dp"
                android:textColor="@color/White"/>
            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blank"
                android:text="Back"
                android:textSize="30dp"
                android:textColor="@color/White"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="690dp"
            android:layout_marginTop="110dp"
            android:paddingTop="10dp"
            android:background="@color/Black"
            android:alpha="0.8">
            <LinearLayout
                android:id="@+id/fragment_find_all_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</FrameLayout>
