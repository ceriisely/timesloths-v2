<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.example.obberertest.timesloth_sm10.ModuleFrameUseNowFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        android:alpha="0.5">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/frame_available_usenow"
        android:layout_width="330dp"
        android:layout_height="520dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="50dp"
        android:background="@drawable/gradient_black"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1A1A1A">
            <TextView
                android:id="@+id/text_usenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/use_now"
                android:textColor="@color/White"
                android:textSize="30dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="410dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="@string/start_time"
                        android:textColor="@color/White"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"/>
                    <NumberPicker
                        android:id="@+id/picker_start_time"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="120dp"
                        android:scaleX="1"
                        android:scaleY="1">
                    </NumberPicker>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/text_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:text="@string/end_time"
                        android:textColor="@color/White"
                        android:textSize="20dp"
                        android:layout_marginTop="5dp"/>
                    <NumberPicker
                        android:id="@+id/picker_end_time"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="120dp"
                        android:scaleX="1"
                        android:scaleY="1">
                    </NumberPicker>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/text_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/subject"
                        android:textColor="@color/White"
                        android:textSize="20sp"
                        android:paddingLeft="15dp" />
                    <EditText
                        android:id="@+id/edittext_subject"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:background="@color/Connect_Setting_Background_Serveraddress"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/subject"
                        android:textColor="@color/Black"
                        android:textSize="20sp"
                        android:singleLine="true"
                        android:paddingStart="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/text_title_organizer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/organizer"
                        android:textColor="@color/White"
                        android:textSize="20dp"
                        android:paddingLeft="15dp" />
                    <TextView
                        android:id="@+id/text_organizer"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#F5D800"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <Button
                android:id="@+id/btn_available_usenow_ok"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blank"
                android:text="@string/ok"
                android:textColor="@color/White"
                android:textSize="30dp"/>
            <Button
                android:id="@+id/btn_available_usenow_cancel"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blank"
                android:text="@string/cancel"
                android:textColor="@color/White"
                android:textSize="30dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
