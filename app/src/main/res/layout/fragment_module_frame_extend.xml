<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.example.obberertest.timesloth_sm10.ModuleFrameExtendFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black"
        android:alpha="0.5">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/frame_busy_extend"
        android:layout_width="330dp"
        android:layout_height="440dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="50dp"
        android:background="@drawable/gradient_black"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1A1A1A">
            <TextView
                android:id="@+id/text_title_extend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/extend_head"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:layout_marginStart="15dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="330dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_new_ending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/new_ending"
                    android:textColor="@color/White"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="15dp"/>
                <NumberPicker
                    android:id="@+id/picker_extend_time"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5">
                </NumberPicker>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/text_extend_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F5D800"
                        android:textSize="20sp"
                        android:layout_marginTop="40dp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <Button
                android:id="@+id/btn_busy_extend_ok"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blank"
                android:text="@string/ok"
                android:textColor="@color/White"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btn_busy_extend_cancel"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_blank"
                android:text="@string/cancel"
                android:textColor="@color/White"
                android:textSize="30sp"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
